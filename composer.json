{

    "name": "agentejo/cockpit",
    "type": "project",
    "description": "Cockpit Headless CMS",
    "keywords": ["cms", "headles", "api", "cockpit"],
    "homepage": "https://getcockpit.com/",
    "license": "MIT",
    "authors": [
        {
            "name": "Artur Heinze",
            "email": "artur@agentejo.com"
        }
    ],

    "scripts": {
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:8080 index.php"
        ]
    },

    "require": {
        "php": "^8.0.0",
        "ext-json": "*",
        "phpmailer/phpmailer": "^6.4",
        "claviska/simpleimage": "^3.6",
        "ksubileau/color-thief-php": "^1.4",
        "league/flysystem": "^1.1",
        "firebase/php-jwt": "^5.2",
        "mongodb/mongodb": "^1.8",
        "maennchen/zipstream-php": "^0.5.2",
        "colinodell/json5": "^2.2",
        "robthree/twofactorauth": "^1.8",
        "bacon/bacon-qr-code": "^2.0",
        "symfony/polyfill-mbstring": "^1.22",
        "symfony/polyfill-php80": "^1.22",
        "symfony/polyfill-php81": "^1.22"
    },

    "config": {
        "vendor-dir": "lib/vendor",
        "optimize-autoloader": true,
        "prefer-dist": true,
        "lock": false
    }
}
